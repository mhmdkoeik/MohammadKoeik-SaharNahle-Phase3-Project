
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Send Mail</h3>
            </div>
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <span class="form-control-static">Receiver Mail </span>
                        <input class="form-control" type="text" name="receiver_mail">
                    </div>
                    <div class="form-group">
                        <span class="form-control-static">Subject </span>
                        <input class="form-control" type="text" name="subject">
                    </div>
                    <div class="form-group">
                        <span class="form-control-static">Message </span>
                        <input class="form-control" type="text" name="message">
                    </div>
                   
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-success pull-right"><i class="fa fa-send"></i> Send</button>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
